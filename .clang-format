#A slightly modified verstion of Allman, without linebreaks before else statements
BreakBeforeBraces: 'Custom'

#Control of individual brace wrapping cases
BraceWrapping: {
    AfterClass: 'true'
    AfterControlStatement: 'true'
    AfterEnum: 'true'
    AfterFunction: 'true'
    AfterNamespace: 'true'
    AfterStruct: 'true'
    AfterUnion: 'true'
    BeforeCatch: 'true'
    BeforeElse: 'false'
    IndentBraces: 'false'
}

UseTab: Never
IndentWidth: 2
SpaceBeforeParens: Never

PointerAlignment: Left
IndentCaseLabels: false
ColumnLimit: 100

AllowShortFunctionsOnASingleLine: true
AllowShortIfStatementsOnASingleLine: false

AlwaysBreakTemplateDeclarations: true
